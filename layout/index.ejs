<div id="index">
		<div class="index-inner">
	<% if (page.posts.length > 0) { %>
	    <% page.posts.each(function(post) { %>
	      <article>
	        <h1>
	        <%=post.title%>
	        <hr>
	        <span class="date"><%- date(post.updated) %><span>
	        </h1>
	        <%-post.content%>
	      
	        <% if (!post.copylink) { %>
	          <br />
	          <div class="copyright">本作品采用&nbsp;<a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/"><strong>CC-BY-SA&nbsp;4.0</strong></a>&nbsp;进行许可。<hr></div>
	        <% } else { %>
	          <p>版权声明: 转载作品，本文来源于<a href="<%=post.copylink%>" target="_blank"><%=post.copylink%></a>，由[我]整编而成。</p>
	        <% } %>

	      </article>
	    <% }); %>
	<% } %>

	<nav>
		<a href="/archives">Archives</a>
		<a href="/about">About</a>
	</nav>
	<P class="declaration">
		Copyright © <%- config.date>moment().year()?'2016-'+moment().year():'2016' %> by <a href="/about"><%=config.author%></a> , Powered by <a href="http://hexo.io/" target="_blank">Hexo</a>
	</P>
	    </div>
</div>